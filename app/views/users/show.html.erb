<% content_for :banner do %>
  <div class="name-banner">
  </div>
<% end %>

<%- model_class = User -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crypted_password) %>:</strong></dt>
  <dd><%= @user.crypted_password %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salt) %>:</strong></dt>
  <dd><%= @user.salt %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remember_me_token) %>:</strong></dt>
  <dd><%= @user.remember_me_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remember_me_token_expires_at) %>:</strong></dt>
  <dd><%= @user.remember_me_token_expires_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reset_password_token) %>:</strong></dt>
  <dd><%= @user.reset_password_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reset_password_token_expires_at) %>:</strong></dt>
  <dd><%= @user.reset_password_token_expires_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reset_password_email_sent_at) %>:</strong></dt>
  <dd><%= @user.reset_password_email_sent_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activation_state) %>:</strong></dt>
  <dd><%= @user.activation_state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activation_token) %>:</strong></dt>
  <dd><%= @user.activation_token %></dd>
  <dt><strong><%= model_class.human_attribute_name(:activation_token_expires_at) %>:</strong></dt>
  <dd><%= @user.activation_token_expires_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
