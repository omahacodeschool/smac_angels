<div id="controller_users" class="user-show-banner">
  <div class="row">
    <!-- placeholder for @request.requestor.fname -->
    <div class="large-4 large-centered small-6 small-centered columns">
      <div class="avatar-banner">

         <%= image_tag('avatar.png') %>

      </div>
    </div>
  </div>
  
  <div class="row">  
    <span class="large-2 large-centered columns">
      <div class="center-banner">
      <div class="name-banner">
        <%= @user.fname %> <%= @user.lname %>
      </div>

      <div class="separator-banner large-9 large-centered small-centered columns"></div>
        
      <div class="tagline-banner">
        <%= @user.email %>
      </div>
      </div>
    </span>
   </div> 
 </div>





<% if @requests %>
  <h3>Requests for a monkey:</h3>

  <% @requests.each do |request| %>
    <div><% if request.before_photo_url.url == nil %>
      <%= image_tag("profile.png") %>
    <% else %>
      <%= image_tag(request.before_photo_url_url(:thumb)) %>
    <% end %>
    </div>

    <% if request.obo %>
      <div><%= request.obo_fname %> <%= request.obo_lname %></div>
    <% else %>
      <div>Me</div>
    <% end %>


    <div><%= image_tag(request.sockmonkey.image_url) %></div>
    <div><%= request.sockmonkey.name %></div>
    <div><%= request.current_status %></div>

    
    <%= link_to "View Request", request_path(request.id) %>
  <% end %>

<% end %>

<h3>I'm an Angel for:</h3>

<% if @angels %>

  <% @angels.each do |angel| %> 
    <div>
    <% if angel.before_photo_url %>
      <%= image_tag(angel.before_photo_url) %>
    <% else %>
      <%= image_tag("profile.png") %>
    <% end %>
    </div>

    <% if angel.obo %>
      <div><%= angel.obo_fname %> <%= angel.obo_lname %></div>
    <% else %>
      <div><%= angel.requestor.fname %> <%= angel.requestor.lname %></div>
    <% end %>

    <div><%= image_tag(angel.sockmonkey.image_url)%></div>
    <div><%= angel.sockmonkey.name %></div>
    <div><%= angel.current_status %></div>
    <%= link_to "View Request", request_path(angel.id) %>
  <% end %>

<% end %>

<div class="form-actions">%>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => "button-link" %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => "button-link btn-danger" %>
</div>
