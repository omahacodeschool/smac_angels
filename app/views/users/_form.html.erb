<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :crypted_password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :crypted_password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :salt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :salt, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remember_me_token, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :remember_me_token, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :remember_me_token_expires_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :remember_me_token_expires_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reset_password_token, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reset_password_token, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reset_password_token_expires_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :reset_password_token_expires_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reset_password_email_sent_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :reset_password_email_sent_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activation_state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :activation_state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activation_token, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :activation_token, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activation_token_expires_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :activation_token_expires_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
