<div class="row center-text blue">
  <h1>Admin Actions</h1>
  
  <%= render :partial => 'admin/adminnav' %>
  
  <div id="admin_requests">
    <h2>Unmatched Requests</h2>
    <ul>
      <% @unmatched_req.each do |unmatched|  %>
        <% requestor = User.find(unmatched.requestor_id) %>
        <li><%= link_to "#{requestor.name}", request_path(unmatched.id) %></li>
    <% end %>
    </ul>


    <h2>Matched Requests</h2>
    <ul>
    <% @matched_req.each do |matched|  %>
      <% requestor = User.find(matched.requestor_id) %>
      <li><%= link_to "#{requestor.name}", request_path(matched.id) %></li>
    <% end %>
    </ul>

    <h2>Last 10 Completed Requests</h2>
    <ul>
    <% @completed_req.each do |completed|  %>
      <% if completed.requestor_id %>
        <% requestor = User.find(completed.requestor_id) %>
        <li><%= link_to "#{requestor.name}", request_path(completed.id) %></li>
      <% else %>
        <li><%= link_to "**REMOVED BY ADMIN**", request_path(completed.id) %></li>
      <% end %>
    
    <% end %>
    </ul>
  </div>
  
  <div class="actions">
    <%= link_to 'View All Requests', request_history_path, :class => "ctr_button admin_button" %>
  </div>
