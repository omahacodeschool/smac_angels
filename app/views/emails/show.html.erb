<%- model_class = Email -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:request_id) %>:</strong></dt>
  <dd><%= @email.request_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @email.content %></dd>
  <dt><strong><%= model_class.human_attribute_name(:template_id) %>:</strong></dt>
  <dd><%= @email.template_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to_addresses) %>:</strong></dt>
  <dd><%= @email.to_addresses %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_path(@email), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
