<h1>Listing emails</h1>
<table>
  <tr>
    <th>Request</th>
    <th>Content</th>
    <th>Template</th>
    <th>To addresses</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @emails.each do |email| %>
    <tr>
      <td>
        <%= email.request_id %>
      </td>
      <td>
        <%= email.content %>
      </td>
      <td>
        <%= email.template_id %>
      </td>
      <td>
        <%= email.to_addresses %>
      </td>
      <td>
        <%= link_to 'Show', email %>
      </td>
      <td>
        <%= link_to 'Edit', edit_email_path(email) %>
      </td>
      <td>
        <%= link_to 'Destroy', email, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New Email', new_email_path %>
