<div class="row">
  <div class"large-12 columns">
    <div id="login" class="form" >
      <div class="form_name center">
        Login to SMAC Angels!
      </div>

    <div class="clear"></div>
  
    <div class="form_main">
      <%= form_tag sessions_path do %>
        <div class="field">
          <%= text_field_tag(:email, params[:email], placeholder: "Email") %>
        </div>
        <div class="field">
          <%= password_field_tag(:password, nil, placeholder: "Password") %>
        </div>
            
        <div class="checkbox">
          <div id="cbox_label">Remember me.</div>
          <%= check_box_tag(:remember_me, "1", params[:remember_me]) %>
          <%= label_tag(:remember_me, "") %>
        </div>
        
        
        <div id="actions">
          <%= submit_tag "Log In", :class => 'ctr_button' %>
        </div>
      <% end %>
      
      <div class="form_name2 center">
        Forgot Password?
      </div>
      <%= render 'forgot_password_form' %>
    </div>
  </div>
</div>

<div class="push"></div>
