<%= form_tag password_resets_path, :method => :post, :class => "password_resets" do %>
  <div id="forgot_password" class="field">
    <%= text_field_tag(:email, nil, placeholder: "Email") %> 
  </div>
    
  <div id="actions">
    <%= submit_tag "Reset Password", :class => 'ctr_button2' %>
  </div>
<% end %>