<%= form_for request do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@request.errors.count, "error")} prohibited this request from being saved:" %>
      </h2>
      <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :requestor_id, :value => session[:user_id] %>
  
  <div class="obo_check field">
    <%= f.label "On behalf of someone else:" %>
    <%= f.check_box :obo %>
  </div>

  <div class="obo_name field"> 
    <%= f.label "On behalf of First Name" %>
    <%= f.text_field :obo_fname %>
  </div>
  <div class="obo_name field"> 
    <%= f.label "On behalf of Last Name" %>
    <%= f.text_field :obo_lname %>
  </div>

  <!--<div class="field">
    <%#= f.label "Do you want to be anonymous?" %>
    <%#= f.check_box :anon_req %>
  </div>-->
  <div class="field">
    <%= f.label :ship_address %>
    <%= f.text_field :ship_address %>
  </div>
  <div class="control-group">
    <%= f.label :ship_city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ship_city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ship_state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ship_state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ship_zipcode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ship_zipcode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :story, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :story, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :external_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :external_url, :class => 'text_field' %>
    </div>
  </div>
  <div class="field">
    <%= f.label "Recipient Picture" %>
    <%= f.file_field :before_photo_url %>
  </div>
  <div class="field">
    <%= f.label "Picture after your receive SMAC Monkey" %>
    <%= f.file_field :after_photo_url %>
  </div>
  <div class="field">
    <%= f.check_box :agree_to_terms %>
    By checking this box, you understand we need to give your SMAC! Angel your mailing address in order for them to send him to you. We want to make sure you are cool with that!
  </div>
  <div class="monkey">
    <% @sockmonkeys.each do |monkey| %>
      <%= f.radio_button :sockmonkey_id, monkey.id %>
      <%= f.label :sockmonkey_id, image_tag(monkey.image_url), :value => monkey.id %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
