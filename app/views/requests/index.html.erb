  <div id="controller_<%= params[:controller] %>" class="banner">
    
    <div class="row">  
      <span class="large-2 large-centered columns">
        <div class="center-banner">
        <div class="requests-text-banner">
          Become an angel and gift a "comfort creature" like NoMo or Phoenix to remind those in need that they are not alone in our fight against cancer.
        </div>
  
        <div class="separator-banner large-9 large-centered small-centered columns"></div>
  
        <div class="tagline-banner">
          Check out our requests below!
        </div>
        </div>
      </span>
     </div> 
   </div>
   
<div class="row">
  <div class="large-12 small-12 columns content-small-padding center">
    <h2>Select a lucky recipient.</h2>
  </div>
</div>   

<div class="row content-small-padding">

  <div class="requests clear">

    <% if @requests %>

      <%= link_to :new_request do %>
        <div class="add_request left large-3 small-11 columns">
          <p>Request Monkey</p>
          <a href="<%= new_request_path %>" class="fa fa-plus" title="New Request"></a>
        </div>
      <% end %>

      <% @requests.each do |request| %>
    
        <div class="request large-3 small-11 columns">
          <%= link_to image_tag(request.before_photo_url_url(:thumb)).html_safe, request_path(request.id), :class => 'left' %>
        </div>
        
      <% end %>
    <% else %>
      <h2>There are no requests at this time.  You still can become an Angel for the next Sock Monkey requestor!</h2>
      <p><%= link_to "Become Angel", "http://smacmonkey.com" %></p>
    <% end %>
  </div>
  <%#= button_to "Show More", nil, :method => "get", :class => "ctr_button" %>
</div>