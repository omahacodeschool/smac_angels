<div id="controller_requests" class="requests-show-banner">
  <div class="row">
    <!-- placeholder for @request.requestor.fname -->
    <div class="large-4 large-centered small-6 small-centered columns">
      <div class="avatar-banner">
        <% if @request.before_photo_url.url == nil %>
          <%= image_tag("profile.png") %>
        <% else %>
          <%= image_tag(@request.before_photo_url_url(:thumb), :alt => "user avatar") %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row">  
    <span class="large-2 large-centered columns">
      <div class="center-banner">
      <div class="name-banner">
        <%= @request.obo ? @request.obo_fname : @request.requestor.fname %> is asking for <%= @request.sockmonkey.name %>
      </div>

      <div class="separator-banner large-9 large-centered small-centered columns"></div>

      <div class="tagline-banner">
        Can you help?
      </div>
      </div>
    </span>
   </div> 
 </div>

<% if @request.angel_id %>
  <div class="row full-width-requests center-text">
    <div class="large-3 small-6 private-box columns">  
        <b>Street</b><br>
        <%= @request.ship_address %>
    </div>

    <div class="large-3 small-6 private-box columns">    
        <b>City</b><br>
        <%= @request.ship_city %>
    </div>

    <div class="large-3 small-6 private-box columns">
        <b>State</b><br>
        <%= @request.ship_state %>
    </div>

    <div class="large-3 small-6 private-box columns">
        <b>Zipcode</b><br>
        <%= @request.ship_zipcode %>
    </div>
  </div>
<% end %>

<div class="row center-text">
      
  <p id="notice">
    <%= notice %>
  </p>

  <div class="large-9 large-centered columns">

    <div>
    </div>
    <p>
      <h2><%= @request.obo ? @request.obo_fname : @request.requestor.fname %>'s Story</h2>
      <br>
      <span class="storytime"><%= @request.story %></span>
    </p>
    <br>
    <br>
    <p>
      <h2>Website</h2>
      <span class="storytime"><%= @request.external_url ? @request.external_url : "No website" %></span>
    </p>
    <br>
    <br>
    <p>
      <% if @request.angel_id %>
        <h2>Angel Name</h2>
        <span class="storytime"><%= @request.anon_angel ? "The angel has chosen to remain anonymous" : @request.angel.shortname %></span>
      <% end %>
    </p>
    <div class="row content-padding center-text">
      <% if current_user %>
        <%= link_to ' EDIT PROFILE ', edit_request_path(@request), :class => "button-link" %> &nbsp;
      <% end %>
    </div>
  </div>
</div>

<div class="row content-small-padding">
  <div class="large-7 small-3 large-centered small-centered center-text columns">
    <% if !@request.angel_id %>
      <%= form_tag(become_angel_path) do %>
        <%= hidden_field_tag 'request_id', @request.id %>
        <div class="row center-text">
          <%= submit_tag "BECOME ANGEL", :class => "submit-button" %>
          <%= submit_tag "ANONYMOUS ANGEL", :class => "submit-button", :name => "anon_button" %>
        </div>

      <% end %>
    <% end %>
  </div>
</div>

<div class="row center-text content-small-padding">
  <div class="fb-comments" data-href="http://smac-angels-staging.herokuapp.com/requests/<%=@request.id%>" data-width="500" data-num-posts="10"></div>
  </div>
</div>

<div class="row content-small-padding center-text">
  <div id="share-buttons">
    <!-- Share on facebook -->
    <div class="fb-share-button" data-href="http://smac-angels-staging.herokuapp.com/requests/#{@request.id}" data-type="button"></div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <!-- Share on twitter -->
    <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>


    <!-- Share on pinterest if there is an image to share -->
    <a href      = "//www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark" ><img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_gray_20.png" /></a>
    <!-- Please call pinit.js only once per page -->
    <script type = "text/javascript" async src="//assets.pinterest.com/js/pinit.js"></script>
  

</div>