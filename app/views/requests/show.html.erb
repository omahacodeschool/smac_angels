<p>
  <b>Ship address:</b>
  <%= @request.ship_address %>
</p>
<p>
  <b>Ship city:</b>
  <%= @request.ship_city %>
</p>
<p>
  <b>Ship state:</b>
  <%= @request.ship_state %>
</p>
<p>
  <b>Ship zipcode:</b>
  <%= @request.ship_zipcode %>
</p>
<p>
  <b>Story:</b>
  <%= @request.story %>
</p>
<p>
  <b>External url:</b>
  <%= @request.external_url %>
</p>
<% if @request.angel_id %>
  I have an angel!
<% else %>
  <%= form_tag(become_angel_path) do %>
    <%= hidden_field_tag 'request_id', @request.id %>
    <div class="field">
      <%= label_tag "Anonymous Angel?" %>
      <%= check_box_tag 'anonymous' %>
    </div>
    <div>
      <%= submit_tag "Become Angel" %>
    </div>
  <% end %>
<% end %>
<%= link_to 'Edit', edit_request_path(@request) %>
